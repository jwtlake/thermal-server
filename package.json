{
  "name": "thermal-server",
  "version": "1.0.0",
  "description": "Home automation project to monitor, log, and send alerts using temperature sensors.",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:prod": "NODE_ENV=prod node index.js",
    "start:dev": "NODE_ENV=dev nodemon index.js",
    "webpack": "cp ./node_modules/lucid-ui/dist/index.css ./src/client/public && webpack",
    "webpack:watch": "cp ./node_modules/lucid-ui/dist/index.css ./src/client/public && webpack -w",
    "init": "node ./src/server/config/knex/init.js",
    "test": "mocha --compilers js:babel-core/register --require ./test/test_helper.js --recursive",
    "test:watch": "npm run test -- --watch"
  },
